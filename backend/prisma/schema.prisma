generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int      @id @default(autoincrement())
  nome         String
  email        String   @unique
  senhaHash    String
  role         String   @default("user")
  refreshToken String?
  createdAt    DateTime @default(now())
  cliente      Cliente?
}

model Cliente {
  id        Int      @id @default(autoincrement())
  usuarioId Int      @unique
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  telefone  String?
  endereco  Endereco?
  pedidos   Pedido[]
}



model Endereco {
  id         Int     @id @default(autoincrement())
  clienteId  Int     @unique
  cliente    Cliente @relation(fields: [clienteId], references: [id])
  
  rua        String?
  numero     String?
  bairro     String?
  cidade     String?
  estado     String?
  cep        String?
  latitude   Float?
  longitude  Float?
  criadoEm   DateTime @default(now())
}


model Categoria {
  id       Int      @id @default(autoincrement())
  nome     String
  produtos Produto[]
}

model Produto {
  id           Int                 @id @default(autoincrement())
  nome         String
  descricao    String?
  preco        Float
  disponivel   Boolean             @default(true)
  categoriaId  Int?
  categoria    Categoria?          @relation(fields: [categoriaId], references: [id])
  itensPedido  ItemPedido[]
  createdAt    DateTime            @default(now())
  imagemUrl    String?
  destaque     Destaque?
  ingredientes String?
}

model Pedido {
  id          Int       @id @default(autoincrement())
  clienteId   Int?
  cliente     Cliente?  @relation(fields: [clienteId], references: [id])
  data_hora   DateTime  @default(now())
  status      String?
  valor_total Float?
  tipo_pedido String?
  itens       ItemPedido[]
  observacoes String?
  tempo_estimado Int      @default(45)
}


model ItemPedido {
  id             Int     @id @default(autoincrement())
  pedidoId       Int
  pedido         Pedido  @relation(fields: [pedidoId], references: [id])
  produtoId      Int
  produto        Produto @relation(fields: [produtoId], references: [id])
  quantidade     Int
  preco_unitario Float
  observacoes    String?
}

model Destaque {
  id        Int      @id @default(autoincrement())
  produtoId Int      @unique 
  produto   Produto  @relation(fields: [produtoId], references: [id])
  createdAt DateTime @default(now())
}